<p id="notice"><%= notice %></p>

<h1>Menu Items for <%= @restaurant.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menu_items.each do |menu_item| %>
      <tr>
        <td><%= link_to menu_item.name, add_menu_item_path(order_id:1, menu_item_id:menu_item.id), method: :post %></td>
        <td>$<%= '%.2f' % menu_item.price %></td>
        <td><%= menu_item.restaurant %></td>
        <td><%= link_to 'Show', menu_item %></td>
        <td><%= link_to 'Edit', edit_menu_item_path(menu_item) %></td>
        <td><%= link_to 'Destroy', menu_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Menu Item', new_restaurant_menu_item_path %>

<%= link_to 'Back to Show Page', restaurant_path(@restaurant) %>
